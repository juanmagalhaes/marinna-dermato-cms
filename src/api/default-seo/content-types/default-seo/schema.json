      "type": "string",
      "required": true
    },
    "locale": {
      "type": "string",
      "required": true,
      "default": "pt_BR"
    },
    "keywords": {
      "type": "string",
      "required": false
    },
    "canonicalUrl": {
      "type": "string",
      "required": false
    },
    "openGraphImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "twitterImage": {
      "type": "media",
      "multiple": false,
